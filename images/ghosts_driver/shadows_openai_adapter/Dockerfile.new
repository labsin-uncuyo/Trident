# Use an official Python runtime as a parent image
FROM python:3.11.5-slim

# Set the working directory in the container
WORKDIR /usr/src/app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libffi-dev \
    curl \
    python3-dev \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# Copy the GHOSTS Shadows source code
COPY --from=ghosts-shadows-src /ghosts-shadows/src /usr/src/app/src
COPY --from=ghosts-shadows-src /ghosts-shadows/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Upgrade pip, setuptools, and wheel
RUN pip install --upgrade pip setuptools wheel

# Copy fixed requirements and OpenAI-enabled API
COPY requirements_fixed.txt /usr/src/app/src/requirements.txt
COPY api.py /usr/src/app/src/api.py

# Install Python packages
RUN pip install --no-cache-dir -r /usr/src/app/src/requirements.txt

EXPOSE 5900
EXPOSE 7860

# Run Supervisor when the container starts
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
